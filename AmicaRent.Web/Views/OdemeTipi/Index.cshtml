@model IEnumerable<AmicaRent.DataAccess.OdemeTipi>

@{ ViewBag.Title = "Index"; }

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ödeme Tipi Adı
        </th>
        <th>
            Oluşturma Zamanı
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OdemeTipi_Adi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OdemeTipi_CreateDate)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Edit", new { id = item.OdemeTipi_ID }) |
        @Html.ActionLink("Detaylar", "Details", new { id = item.OdemeTipi_ID })
    </td>
</tr>
}

</table>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        var menuItem = document.querySelector('#solmenu-system');
        menuItem.classList.add('active');
        var subMenuItem = menuItem.querySelector('#solmenu-system-tanim-OdemeTipi');
        subMenuItem.classList.add('active');
    });</script>
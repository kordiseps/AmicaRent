            <div class="form-group">
                <label class="control-label col-md-2">
                    Trf.Sig.Bit.Tar
                </label>
                <div class="col-md-9"> 
                    @Html.TextBoxFor(m => m.Arac_TrafikSigortasiBitisTarihi, new { @Value = Model.Arac_TrafikSigortasiBitisTarihi?.ToString("dd/MM/yyyy"), @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Arac_TrafikSigortasiBitisTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Kasko Bit.Tar
                </label>
                <div class="col-md-9"> 
                    @Html.TextBoxFor(m => m.Arac_KaskoBitisTarihi, new { @Value = Model.Arac_KaskoBitisTarihi?.ToString("dd/MM/yyyy"), @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Arac_KaskoBitisTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Koltuk Sig.Bit.Tar
                </label>
                <div class="col-md-9"> 
                    @Html.TextBoxFor(m => m.Arac_KoltukSigortasiBitisTarihi, new { @Value = Model.Arac_KoltukSigortasiBitisTarihi?.ToString("dd/MM/yyyy"), @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Arac_KoltukSigortasiBitisTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Fenni Myn.Gec.Tar
                </label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Arac_FenniMuayeneGecerlilikTarihi, new { @Value = Model.Arac_FenniMuayeneGecerlilikTarihi?.ToString("dd/MM/yyyy"), @class = "form-control" })
                    
                    @Html.ValidationMessageFor(model => model.Arac_FenniMuayeneGecerlilikTarihi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Onayla</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


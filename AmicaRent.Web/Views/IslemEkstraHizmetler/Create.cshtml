@model AmicaRent.DataAccess.IslemEkstraHizmetler

@{
    ViewBag.Title = "Yeni Islem Ekstra Hizmetler";
} 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Islem Ekstra Hizmetler</h3>
        </div> 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Islem_ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Islem_ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Islem_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EkstraHizmetler_ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.EkstraHizmetler_ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EkstraHizmetler_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Onayla</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön ", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<WebApplication.DataAccess.viewServis>

@{ ViewBag.Title = ""; }

<h2>Araç Servis Kayıtları</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Araç Marka/Model
        </th>
        <th>
            Servis Zamanı
        </th>
        <th>
            Servis Firma
        </th>
        <th>
            Notlar
        </th>
        <th>
            Servis Ücreti
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.AracGrup_Adi @item.AracMarka_Adi @item.AracModel_Adi @item.Arac_Yil
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servis_ServisZamani)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ServisFirma_Adi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servis_Notlar)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servis_Ucreti)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Edit", new { id = item.Servis_ID }) |
        @Html.ActionLink("Detaylar", "Details", new { id = item.Servis_ID }) |

    </td>
</tr>}

</table>

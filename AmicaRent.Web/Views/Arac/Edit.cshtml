@using WebApplication.DataAccess
@model WebApplication.DataAccess.Arac

@{
    ViewBag.Title = "Düzenle";

    List<AracGrup> aracGrupList = ViewBag.AracGrupList;
    List<AracMarka> aracMarkaList = ViewBag.AracMarkaList;
    List<AracModel> aracModelList = ViewBag.AracModelList;
    List<AracYakitTuru> aracYakitTuruList = ViewBag.AracYakitTuruList;
    Dictionary<string, string> vitesTipi = ViewBag.VitesTipi;
    List<AracKasaTipi> aracKasaTipiList = ViewBag.AracKasaTipiList;
    Dictionary<int, string> aracKlimaDurumu = ViewBag.AracKlimaDurumu;
    List<AracRenk> aracRenkList = ViewBag.AracRenkList;
    Dictionary<int, string> aracKiralamaDurumu = ViewBag.AracKiralamaDurumu;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Araç</h3>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Arac_ID)

            <div class="form-group">
                <label class="control-label col-md-2">
                    Araç Grubu
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracGrup_ID, new SelectList(aracGrupList, "AracGrup_ID", "AracGrup_Adi"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracGrup_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <label class="control-label col-md-2">
                    Araç Marka
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracMarka_ID, new SelectList(aracMarkaList, "AracMarka_ID", "AracMarka_Adi"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracMarka_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Araç Model
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracModel_ID, new SelectList(aracModelList, "AracModel_ID", "AracModel_Adi"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracModel_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Araç Yıl
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Arac_Yil, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Arac_Yil, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Yakıt Türü
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracYakitTuru_ID, new SelectList(aracYakitTuruList, "AracYakitTuru_ID", "AracYakitTuru_Adi"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracYakitTuru_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Vites Tipi
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.Arac_VitesTipi, new SelectList(vitesTipi, "Key", "Value"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Arac_VitesTipi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Kasa Tipi
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracKasaTipi_ID, new SelectList(aracKasaTipiList, "AracKasaTipi_ID", "AracKasaTipi_Adi"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracKasaTipi_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Klima Durumu
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracKlimaDurumu, new SelectList(aracKlimaDurumu, "Key", "Value"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracKlimaDurumu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Plaka No
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AracPlakaNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AracPlakaNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Güncel KM.
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AracGuncelKM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AracGuncelKM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Araç Motor No
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AracMotorNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AracMotorNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Şase No
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AracSaseNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AracSaseNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Ruhsat Seri No
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AracRuhsatSeriNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AracRuhsatSeriNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Araç Durumu
                </label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Arac_Status, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Arac_Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    Araç Renk
                </label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.AracRenk_ID, new SelectList(aracRenkList, "AracRenk_ID", "AracRenk_Adi"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AracRenk_ID, "", new { @class = "text-danger" })

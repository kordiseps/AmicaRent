
@{ViewBag.Title = "Banka Bilgileri";}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-default btn-sm" href="@Url.Action("Create")">
                    <i class="fa fa-plus"></i> Yeni
                </a>
            </div>
            <div class="box-body">
                <table id="dt" class="table table-hover table-striped" style="width:100%">
                    <thead class="blue-grey lighten-4">
                        <tr>
                            <th>Banka Adı</th>
                            <th>Hesap Sahibi</th>
                            <th>IBAN</th>
                            <th width="10%"></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        var menuItem = document.querySelector('#solmenu-system');
        menuItem.classList.add('active');
        var subMenuItem = menuItem.querySelector('#solmenu-system-liste-BankaBilgileri');
        subMenuItem.classList.add('active');

        var columns = [
            { "data": "Banka_Adi", "name": "Banka_Adi", "autoWidth": true },
            { "data": "BankaBilgileri_HesapSahibi", "name": "BankaBilgileri_HesapSahibi", "autoWidth": true },
            { "data": "BankaBilgileri_IBAN", "name": "BankaBilgileri_IBAN", "autoWidth": true },
            {
                "data": "BankaBilgileri_ID",
                "render": function (data, type, row) {
                    return "<a class='fa fa-trash task-button' title='Sil' onclick='deleteConfirm(\"/BankaBilgileri/delete/" + row.BankaBilgileri_ID + "\"); return false;' ></a>" +
                        " <a class='fa fa-edit task-button' title='Düzenle' href='/BankaBilgileri/edit/" + row.BankaBilgileri_ID + "'></a>";
                }
            },
        ];

        var selector = "#dt";
        var url = "/BankaBilgileri/LoadDt";
        makeDatatable(selector, url, columns, afterDatatabled);
    });
</script>



@model IEnumerable<AmicaRent.DataAccess.Kullanici>

@{ ViewBag.Title = "Kullanıcılar"; }

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-default btn-sm" href="@Url.Action("Create")">
                    <i class="fa fa-plus"></i> Yeni
                </a>
            </div>
            <div class="box-body">
                <table id="dt" class="table table-hover table-striped" style="width:100%">
                    <thead class="blue-grey lighten-4">
                        <tr>
                            <th>
                                Kullanıcı Tam Adı
                            </th>
                            <th>
                                Kullanıcı Adı
                            </th>
                            <th>
                                Oluşturulma Tarihi
                            </th>
                            <th>
                                Son Giriş Zamanı
                            </th>
                            <th width="10%"></th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        var menuItem = document.querySelector('#solmenu-system');
        menuItem.classList.add('active');
        var subMenuItem = menuItem.querySelector('#solmenu-system-liste-Kullanici');
        subMenuItem.classList.add('active');

        var columns = [
            { "data": "Kullanici_TamAdi", "name": "Kullanici_TamAdi", "autoWidth": true },
            { "data": "Kullanici_Adi", "name": "Kullanici_Adi", "autoWidth": true },
            { "data": "OlusturmaZamani", "name": "OlusturmaZamani", "autoWidth": true },
            { "data": "SonGirisZamani", "name": "SonGirisZamani", "autoWidth": true },
            {
                "data": "Kullanici_ID",
                "render": function (data, type, row) {
                    return "<a class='fa fa-trash task-button' title='Sil' onclick='deleteConfirm(\"/Kullanici/delete/" + row.Kullanici_ID + "\"); return false;' ></a>" +
                        " <a class='fa fa-edit task-button' title='Düzenle' href='/Kullanici/edit/" + row.Kullanici_ID + "'></a>" +
                        " <a class='fa fa-wrench task-button' title='Rol Yönet' href='/Kullanici/ManageRole/" + row.Kullanici_ID + "'></a>";
                }
            },
        ];

        var selector = "#dt";
        var url = "/Kullanici/LoadDt";
        makeDatatable(selector, url, columns, afterDatatabled);
    });
</script>
